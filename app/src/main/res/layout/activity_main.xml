<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/diceOne"
        style="@style/dice_textView_style"
        android:layout_marginStart="160dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button"
        style="@style/roll_button_style"
        app:layout_constraintEnd_toEndOf="@+id/diceTwo"
        app:layout_constraintStart_toStartOf="@+id/diceOne"
        app:layout_constraintTop_toBottomOf="@+id/diceOne"

        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/diceTwo"
        style="@style/dice_textView_style"
        android:layout_marginStart="@dimen/_40sdp"
        app:layout_constraintBottom_toBottomOf="@+id/diceOne"
        app:layout_constraintStart_toEndOf="@+id/diceOne"
        app:layout_constraintTop_toTopOf="@+id/diceOne"
        />

</androidx.constraintlayout.widget.ConstraintLayout>