<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="dice_textView_style">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_35sdp</item>
        <item name="android:text">@string/one_text</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="roll_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_16sdp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:text">@string/roll</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/button_color</item>
    </style>

    <style name="dice_imageStyle">
        <item name="android:layout_width">@dimen/_50sdp</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
    </style>

</resources>